<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <PackageLicenseFile>license.txt</PackageLicenseFile>
    <Authors>Anthony Giretti</Authors>
    <Company>Calzolari</Company>
    <Description>Domain objects used for validation errors. Useless in standalone. Standalone package utilized by Calzolari.Grpc.Net.Client.Validation and Calzolari.Grpc.AspNetCore.Validation, because same assembly is required for serializing / deserializing in bytes</Description>
    <PackageTags>grpc;dotnet;validator;validation;request-validation;</PackageTags>
    <RepositoryUrl>https://github.com/AnthonyGiretti/grpc-aspnetcore-validator</RepositoryUrl>
    <PackageProjectUrl>https://github.com/AnthonyGiretti/grpc-aspnetcore-validator</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\license.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
